    description: Wavefront URL
  wavefront_token:
    description: Token
  wavefront_push_listener_port:
    description: Push Listener Port
    default: 2878
  wavefront_opentsdb_port:
    description: OpenTSDB port
    default: 4242
  friendly_hostname:
    description: HostName to Use
  wavefront_preprocessor_rules:
    description: Filters
